pipeline{
   agent any 

   tools {
    maven "maven3.96"
   }

   stages {
    stage('clonefromscm'){

     steps{

      sh "echo  'cloning the latest source code changees'"
      git branch: 'april16', credentialsId: 'JENKINS-GITHUB', url: 'git@github.com:Lion-Technology-Solutions/liontech-joinedproject.git'
     }
    }
   }

   stage('Test&build&apackage'){
    steps{
     sh "echo 'runing unit test for QA  team'"
     sh "echo 'this is LionTech Lexus app'"
     sh "echo 'Maven is responsible for build and packaging applications for QA team'"

     sh   "mvn validate"
     sh   "mvn clean package"
    }
   }








}